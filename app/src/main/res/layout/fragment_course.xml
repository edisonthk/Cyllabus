<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fragment_course_parallaximage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_course_title"
            android:layout_below="@+id/fragment_course_parallaximage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/fragment_course_content"
            android:orientation="vertical"
            android:layout_below="@+id/fragment_course_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></LinearLayout>

    </RelativeLayout>
</ScrollView>